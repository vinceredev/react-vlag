{
  "include": ["src"],
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "plugins": [{ "name": "typescript-plugin-css-modules" }],
  "files": ["./src/index.ts"]
}
